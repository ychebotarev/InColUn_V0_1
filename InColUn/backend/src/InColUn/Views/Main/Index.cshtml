@{
    ViewData["Title"] = "InColUn, User Boards";
}

@section scripts{
    <script src="lib/medium-editor/dist/js/medium-editor.js"></script>
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js"></script>
    <script>
        function logout()
        {
            document.cookie="access_token=";
            window.location.replace('/')
        }
    </script>
}

@section scripts_after_body{
    <script src="js/main.js"></script>
    <script>
    function openNav() {
        document.getElementById("sidebar_menu").style.width = "350px";
    }

    function closeNav() {
        document.getElementById("sidebar_menu").style.width = "0";
    }

    newBoardModalCreateBoard
    </script>
}

@section styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="lib/medium-editor/dist/css/medium-editor.css">
    <link rel="stylesheet" href="css/boards.css">
}

<div class="flex-column" style='min-height:100vh;height:100%;' id='app'>
    <header class="header-row flex-row" id='header'>
        <div>
            <a class="btn btn-success-outline" onclick=openNav()><i class="fa fa-bars fa-2x" aria-hidden="true"></i></a>
            &nbsp;InColUn
        </div>
        <div class="search-box">
            <div class="search-container">
                <input type="search" id="search" placeholder="Search...">
                <button class="icon">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
        <div class="flex-fill"></div>
        <div class="form-inline pull-xs-right">
            <a class="btn btn-success-outline" onclick=logout()>Log out</a>
        </div>
        <div style="width:45px; text-align:center">
            <span class="fa-stack">
                <i class="ttb-stack2 fa fa-stack-2x fa-circle"></i>
                <i class="fa fa-stack-1x fa-ellipsis-v" style="color:black"></i>
            </span>
        </div>
    </header>
        <div class="sidebar" id='sidebar_menu'>
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><i class="fa fa-times" style="color:black"></i></a>
            <a href="#"><i class="fa fa-times" style="color:black"></i>My Boards</a>
            <a href="#"><i class="fa fa-heart-o" style="color:black; font-size:1em"></i>Saved Boards</a>
        </div>
    <div class="mainblock flex-row flex-fill" id='app'>
        <div class="content-area flex-fill" id='content_area'></div>
    </div>
</div>

@{Html.RenderPartial("NewBoard");}
